<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"  android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ToggleButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="@string/btnRutina"
            android:background="@drawable/btn_toggle"
            android:id="@+id/btnRutina"
            android:textOn="@string/btnRutina"
            android:textOff="@string/btnRutina"
            android:checked="true"/>
        <ToggleButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:id="@+id/btnEjercicio"
            android:background="@drawable/btn_toggle"
            android:textOn="@string/btnEjercicio"
            android:textOff="@string/btnEjercicio"
            android:text="@string/btnEjercicio"
            android:layout_weight="1"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:id="@+id/listRutina"></ListView>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#ffffff"
        android:id="@+id/listEjercicio"></ListView>
    </FrameLayout>
</LinearLayout>